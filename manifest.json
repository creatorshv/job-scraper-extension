{
  "manifest_version": 3,
  "name": "Listings",
  "version": "1.0",
  "description": "Quickly save job opportunities and build your listings vault.",
  "action": {
    "default_popup": "auth.html",
    "default_icon": {
      "16": "icons/listings-16.png",
      "32": "icons/listings-32.png",
      "48": "icons/listings-48.png",
      "128": "icons/listings-128.png"
    }
  },
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "host_permissions": ["*://*.linkedin.com/*", "http://localhost:8000/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/listings-16.png",
    "32": "icons/listings-32.png",
    "48": "icons/listings-48.png",
    "128": "icons/listings-128.png"
  }
}
